<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".mypage">

    <LinearLayout
        android:id="@+id/nullspace1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/my" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/logintip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/pleaselogin"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="点击登录"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/history_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="登陆之后查看"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/goto_history_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/history_button"
                android:text="历史记录"
                app:backgroundTint="@color/colorlogin_button"
                app:cornerRadius="10dp" />
        </LinearLayout>
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/nullspace2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"></LinearLayout>


    <LinearLayout
        android:id="@+id/nullspace3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/takenclass_pic"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/question" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/customer_service"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:text="咨询客服"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_item_2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="25dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/myfavorite_pic"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/takenclass" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/question_feedback"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:text="问题反馈"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/main_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="#F2F2F8"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/bottom_bar_1_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/home"
                        android:layout_width="59dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/home" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottom_bar_2_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/platform"
                        android:layout_width="59dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/platform" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottom_bar_3_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/mine"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="4dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/mine_selected" />
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>