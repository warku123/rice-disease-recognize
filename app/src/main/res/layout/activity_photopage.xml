<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ourlogo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/groupsignal" />

        <TextView
            android:id="@+id/apptitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/logo_image"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="5dp"
            android:text="知稻"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/bulb_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/apptitle"
            app:srcCompat="@drawable/bulb" />

        <TextView
            android:id="@+id/introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_image"

            android:layout_marginLeft="100dp"
            android:text="手机上的防治专家"
            android:textSize="15sp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/take_photo"
        android:layout_width="240dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="点击开始拍照"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/take_photo" />

    <LinearLayout
        android:id="@+id/nullspace1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="vertical">
    </LinearLayout>

    <TextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:text="天气" />

    <LinearLayout
        android:id="@+id/nullspace2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        android:id="@+id/choose_from_album"
        android:layout_width="246dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:background="#6600ff"
        android:text="从相册中选择图片" />



    <LinearLayout
        android:id="@+id/history"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:background="#F2F2F8"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/bottom_bar_1_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/home"
                        android:layout_width="59dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/home_selected" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottom_bar_2_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/platform"
                        android:layout_width="59dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/wiki_bar_unselected" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/bottom_bar_3_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/mine"
                        android:layout_width="59dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/mine" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/location"
                android:layout_width="133dp"
                android:layout_height="30dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

